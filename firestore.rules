rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      match /bookmarks/{gameId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /leagues/{leagueId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid in request.resource.data.members;
      allow delete: if request.auth != null && resource.data.commissionerId == request.auth.uid;
    }

    function isLeagueMember(leagueId) {
      return exists(/databases/$(database)/documents/leagues/$(leagueId))
        && request.auth.uid in get(/databases/$(database)/documents/leagues/$(leagueId)).data.get('members', []);
    }

    match /leagues/{leagueId}/teams/{userId} {
      allow read: if request.auth != null && isLeagueMember(leagueId);
      allow create: if request.auth != null && isLeagueMember(leagueId);
      allow update: if request.auth != null && isLeagueMember(leagueId);
      allow delete: if request.auth != null && get(/databases/$(database)/documents/leagues/$(leagueId)).data.commissionerId == request.auth.uid;
    }

    match /leagues/{leagueId}/drafts/{draftId} {
			allow read: if request.auth != null;
			allow create, update: if request.auth != null && isLeagueMember(leagueId);
      allow delete: if request.auth != null && get(/databases/$(database)/documents/leagues/$(leagueId)).data.commissionerId == request.auth.uid;
    }
    
    // Scoring subcollection (bomb adjustments) — written by Admin SDK, read-only for clients.
    match /leagues/{leagueId}/scoring/{date} {
      allow read: if request.auth != null && isLeagueMember(leagueId);
      allow write: if false;
    }

    // Season snapshots (past season final results) — computed and cached on first visit
    match /leagues/{leagueId}/seasonResults/{season} {
      allow read: if request.auth != null && isLeagueMember(leagueId);
      allow create: if request.auth != null && isLeagueMember(leagueId);
      allow update: if false;  // Snapshots are immutable once created
      allow delete: if false;
    }

    match /meta/{docId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /games/{gameId} {
      allow read: if request.auth != null;
      allow write: if false;
      match /history/{date} {
        allow read: if request.auth != null;
        allow write: if false;
      }
    }
  }
}
