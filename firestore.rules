rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users: only that user can read/write their profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Leagues: members can read; anyone can read by code for join flow (we don't expose leagueId without code). Create: any auth. Update: must result in request.auth in members (join or member edit).
    match /leagues/{leagueId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid in request.resource.data.members;
    }

    // Helper: league exists and user is a member (exists() first so get().data is safe)
    function isLeagueMember(leagueId) {
      return exists(/databases/$(database)/documents/leagues/$(leagueId))
        && request.auth.uid in get(/databases/$(database)/documents/leagues/$(leagueId)).data.get('members', []);
    }

    // Teams: league members can read/write (for their own team or league operations)
    match /leagues/{leagueId}/teams/{userId} {
      allow read: if request.auth != null && isLeagueMember(leagueId);
      allow create: if request.auth != null && isLeagueMember(leagueId);
      allow update: if request.auth != null && isLeagueMember(leagueId);
      allow delete: if false;
    }

    // Drafts: league members can read/write
    match /leagues/{leagueId}/drafts/{season} {
      allow read, write: if request.auth != null && isLeagueMember(leagueId);
    }

    // Games: anyone can read; only Admin SDK can write (scripts)
    match /games/{gameId} {
      allow read: if request.auth != null;
      allow write: if false;
      // History and metrics: read-only for client; scripts use Admin SDK
      match /history/{date} {
        allow read: if request.auth != null;
        allow write: if false;
      }
    }

    // Game list by year: one doc per year, read-only for client; scripts write
    match /gameLists/{year} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}
